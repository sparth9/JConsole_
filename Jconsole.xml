<?xml version="1.0"?>

<project   basedir="."  default="compile">
  
  <property name="src" value="src"/>
  <property name="build" value="build"/>
  <property name="dist"  value="classes"/>

  <target name="compile" >
    <javac srcdir="${src}" destdir="${dist}">
	    <classpath>
	       <pathelement path="${classpath}"/>
	       <fileset dir="lib">
	       <include name="**/*.jar"/>
	       </fileset>
	    </classpath>
    </javac>



  </target>
  
</project>


